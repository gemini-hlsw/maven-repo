            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.21.0</version>
                <configuration>
                    <argLine>-Xbootclasspath/p:${settings.localRepository}/org/scala-lang/scala-library/${scala-lang.version}/scala-library-${scala-lang.version}.jar</argLine>
                    <includes>
                        <include>**/*Spec.class</include>
