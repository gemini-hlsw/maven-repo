<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <relativePath>../poms/compiled/</relativePath>
        <groupId>edu.gemini.aspen.giapi-osgi.build</groupId>
        <artifactId>compiled-bundle-settings</artifactId>
        <version>15.0.3-SNAPSHOT</version>
    </parent>

    <properties>
        <bundle.symbolicName>edu.gemini.aspen.giapi-tester</bundle.symbolicName>
        <bundle.namespace>edu.gemini.giapi.tool</bundle.namespace>
    </properties>

    <modelVersion>4.0.0</modelVersion>
    <groupId>edu.gemini.aspen</groupId>
    <artifactId>giapi-tester</artifactId>
    <version>0.2.3-SNAPSHOT</version>

    <name>GIAPI Tester</name>

    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.5</version>
                <configuration>
                    <finalName>${project.artifactId}</finalName>
                    <!--minimizeJar>true</minimizeJar-->
                    <artifactSet>
                        <excludes>
                            <exclude>org.apache.activemq:kahadb</exclude>
                            <exclude>edu.gemini.aspen:giapi-test-support</exclude>
                        </excludes>
                    </artifactSet>
                    <filters>
                        <filter>
                            <artifact>org.apache.activemq:activemq-core</artifact>
                            <excludes>
                                <exclude>org/apache/activemq/store/**</exclude>
                                <exclude>org/apache/activemq/kaha/**</exclude>
                                <exclude>org/apache/activemq/jaas/**</exclude>
                                <exclude>org/apache/activemq/jmdns/**</exclude>
                                <exclude>org/apache/activemq/openwire/tool/**</exclude>
                                <exclude>org/apache/activemq/openwire/v1/**</exclude>
                                <exclude>org/apache/activemq/openwire/v2/**</exclude>
                                <exclude>org/apache/activemq/openwire/v3/**</exclude>
                                <exclude>org/apache/activemq/openwire/v4/**</exclude>
                                <exclude>org/apache/activemq/openwire/v5/**</exclude>
                                <exclude>org/apache/activemq/protobuf/**</exclude>
                                <exclude>org/apache/activemq/proxy/**</exclude>
                                <exclude>org/apache/activemq/security/**</exclude>
                                <exclude>org/apache/activemq/broker/jmx/**</exclude>
                                <exclude>org/apache/activemq/broker/region/cursor/**</exclude>
                                <exclude>org/apache/activemq/broker/region/group/**</exclude>
                                <exclude>org/apache/activemq/broker/scheduler/**</exclude>
                                <exclude>org/apache/activemq/plugin/**</exclude>
                                <exclude>org/apache/activemq/transport/discovery/**</exclude>
                                <exclude>org/apache/activemq/transport/fanout/**</exclude>
                                <exclude>org/apache/activemq/transport/logwriters/**</exclude>
                                <exclude>org/apache/activemq/transport/nio/**</exclude>
                                <exclude>org/apache/activemq/transport/peer/**</exclude>
                                <exclude>org/apache/activemq/transport/reliable/**</exclude>
                                <exclude>org/apache/activemq/transport/stomp/**</exclude>
                                <exclude>org/apache/activemq/transport/udp/**</exclude>
                            </excludes>
                        </filter>
                        <filter>
                            <artifact>com.googlecode.guava-osgi:guava-osgi</artifact>
                            <excludes>
                                <exclude>com/google/common/primitives/**</exclude>
                                <exclude>com/google/common/math/**</exclude>
                                <exclude>com/google/common/cache/**</exclude>
                                <exclude>com/google/common/util/**</exclude>
                                <exclude>com/google/common/eventbus/**</exclude>
                                <exclude>com/google/common/hash/**</exclude>
                                <exclude>com/google/common/io/**</exclude>
                            </excludes>
                        </filter>
                        <filter>
                            <artifact>log4j:log4j</artifact>
                            <excludes>
                                <exclude>org/apache/log4j/chainsaw/**</exclude>
                                <exclude>org/apache/log4j/jmx/**</exclude>
                                <exclude>org/apache/log4j/lf5/**</exclude>
                                <exclude>org/apache/log4j/nt/**</exclude>
                                <exclude>org/apache/log4j/varia/**</exclude>
                            </excludes>
                        </filter>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>META-INF/maven/**</exclude>
                            </excludes>
                        </filter>
                    </filters>
                    <transformers>
                        <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                            <mainClass>edu.gemini.giapi.tool.GiapiTester</mainClass>
                        </transformer>
                    </transformers>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>edu.gemini.aspen</groupId>
            <artifactId>giapi</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.aspen.gmp</groupId>
            <artifactId>gmp-commands-jms-client</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.aspen</groupId>
            <artifactId>giapi-status-service</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.jms</groupId>
            <artifactId>jms-activemq-provider</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.aspen</groupId>
            <artifactId>giapi-obsevents</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.aspen</groupId>
            <artifactId>giapi-fileevents</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.jms</groupId>
            <artifactId>jms-api</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.aspen</groupId>
            <artifactId>giapi-jms-util</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.gemini.aspen.giapi</groupId>
            <artifactId>giapi-status-setter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-jms_1.1_spec</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.4</version>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>1.6.4</version>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.16</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>edu.gemini.aspen</groupId>
            <artifactId>giapi-test-support</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>

</project>
