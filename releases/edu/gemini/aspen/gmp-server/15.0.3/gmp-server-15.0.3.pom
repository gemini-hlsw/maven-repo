        <profile>
            <id>gpi</id>
            <properties>
                <gmp.instance>gpi</gmp.instance>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>edu.gemini.gpi</groupId>
                    <artifactId>gpi-observation-status</artifactId>
                    <version>0.2.10-SNAPSHOT</version>
                </dependency>
